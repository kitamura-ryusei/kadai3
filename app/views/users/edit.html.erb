<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"" %>
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "", accept: "image/*" %>
  <label for="inputText">Introduction</label>
  <%= f.text_field :introduction, placeholder:"" %>
  <%= f.submit "Update User" %>
<% end %>