<div class="container">
  <div class="row">
      <%= render 'users/usersinfo', user: current_user, book: @book %>

<div class="col-md-8 offset-md-1">
<h2>Users</h2>
  <table class = "table table-striped">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
    
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>image:<%= image_tag user.get_profile_image(100, 100) %></td>
          <td>name:<%= user.name %></td>
          <td><%= link_to "Show" ,user_path(user.id) %></td>
      <% end %>
        </tr>
    </tbody>
  </table>

</div>
